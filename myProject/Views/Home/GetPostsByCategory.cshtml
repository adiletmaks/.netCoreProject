@{
    ViewData["Title"] = "Home Page";
}

<!-- section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2>Posts</h2>
                </div>
            </div>

            <!-- post -->
            @foreach (Post post in ViewBag.posts)
            {
                <div class="col-md-4">
                    <div class="post">
                        <a class="post-img" href="/post/@post.Id"><img src="@post.Image" alt=""></a>
                        <div class="post-body">
                            <div class="post-meta">
                                <a class="post-category cat-1" href="/post/@post.Id">@post.Title</a>
                                <span class="post-date">@post.CreatedAt.ToString("dd-MM-yyyy")</span>
                            </div>
                            <h3 class="post-title"><a href="/post/@post.Id">@post.Text.Substring(0, 150)...</a></h3>
                        </div>
                    </div>
                </div>
            }
            <!-- /post -->

        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /section -->
